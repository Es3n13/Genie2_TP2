<Window x:Class="Genie2_TP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Système de visionnement de films en ligne"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Boutons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E50914"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F40612"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    
    <!-- Grille principale -->
    <Grid Margin="20">
        <!-- 3 lignes (haut, contenu, bas) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- En-tête -->
            <RowDefinition Height="*"/>
            <!-- Contenu principal -->
            <RowDefinition Height="Auto"/>
            <!-- Pied de page -->
        </Grid.RowDefinitions>

        <!-- 3 colonnes (gauche, centre, droite) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Espace gauche -->
            <ColumnDefinition Width="Auto"/>
            <!-- Contenu centré -->
            <ColumnDefinition Width="*"/>
            <!-- Espace droit -->
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <!-- Boutons à droite -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                    <Button Content="Se connecter"
                    Width="120" Height="35"
                    Style="{StaticResource SecondaryButton}"
                    Margin="0,0,10,0"/>
                    <Button Content="S'inscrire"
                    Width="120" Height="35"
                    Style="{StaticResource PrimaryButton}"/>
                </StackPanel>

                <!-- Titre centré -->
                <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="🎬"
                       FontSize="28"
                       Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                       FontSize="28"
                       Foreground="#F5F5F5"
                       FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENU PRINCIPAL ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="500">

            <TextBlock Text="Bienvenue sur CinéStream"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Visionnez vos films préférés en ligne, n’importe où, n’importe quand."
                       Foreground="#CCCCCC"
                       FontSize="14"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"/>

            <!-- Zone de recherche -->
            <DockPanel>
                <TextBox Width="400" Height="40"
                         VerticalAlignment="Bottom"
                         HorizontalAlignment="Center"
                         FontSize="16"
                         Padding="10,0"
                         Foreground="White"
                         Background="#2C2C2C"
                         BorderBrush="#555"
                         Text="Rechercher un film...">
                    <TextBox.Template>
                        <ControlTemplate TargetType="TextBox">
                            <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        CornerRadius="4"
                        BorderThickness="2">
                                <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"/>
                            </Border>
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>
                <Button Content="🔍"
                        Width="60" Height="40"
                    Style="{StaticResource SecondaryButton}"/>
            </DockPanel>
        </StackPanel>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>