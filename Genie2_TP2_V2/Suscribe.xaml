<Window x:Class="Genie2_TP2.Suscribe"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inscription"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">
    
    <Window.Resources>
        <!-- Boutons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E50914"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F40612"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Mot de passe-->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Background" Value="#2C2C2C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"
                                  Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Se connecter"
                            Width="120" Height="35"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== FORMULAIRE INSCRIPTION ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="400" >
            <TextBlock Text="Créer un compte"
               Foreground="White"
               FontSize="22"
               FontWeight="Bold"
               TextAlignment="Center"
               Margin="0,0,0,20"/>

            <!-- Nom d'utilisateur -->
            <TextBlock Text="Nom d'utilisateur" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Height="35" Margin="0,0,0,10"
                Style="{StaticResource ModernTextBox}"/>

            <!-- Email -->
            <TextBlock Text="Email" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Height="35" Margin="0,0,0,10"
                Style="{StaticResource ModernTextBox}"/>

            <!-- Mot de passe -->
            <TextBlock Text="Mot de passe" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox Height="35" Margin="0,0,0,10"
                Style="{StaticResource ModernPasswordBox}"/>

            <!-- Confirmer le mot de passe -->
            <TextBlock Text="Confirmer le mot de passe" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox Height="35" Margin="0,0,0,20"
                Style="{StaticResource ModernPasswordBox}"/>

            <!-- Bouton inscription -->
            <Button Content="S'inscrire"
            Height="40"
            Style="{StaticResource PrimaryButton}"/>
        </StackPanel>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
