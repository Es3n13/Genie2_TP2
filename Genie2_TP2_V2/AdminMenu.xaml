<Window x:Class="Genie2_TP2.AdminMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CinéStream - Administration"
        Height="700"
        Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">

    <Window.Resources>
        <!-- Boutons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E50914"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F40612"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="Transparent" BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E50914"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Carte -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Fond dégradé -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF0D0F12" Offset="0"/>
                <GradientStop Color="#FF1A1C1F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Contenu principal -->
            <RowDefinition Height="40"/>
            <!-- Pied de page -->
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Retour"
                            Width="120" Height="35"
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Barre latérale -->
            <Border Grid.Column="0" Background="#FF252527" Padding="20" Margin="20,20,10,20" CornerRadius="8">
                <StackPanel>
                    <TextBlock Text="MENU" FontSize="12" Foreground="#FF9EA8AF" FontWeight="Bold" Margin="0,0,0,15"/>

                    <!-- Accueil -->
                    <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Tag="0">
                        <StackPanel>
                            <TextBlock Text="🏠 Accueil" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Voir statistiques et message de bienvenue" FontSize="10" Foreground="#FF9EA8AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <!-- Gérer Films -->
                    <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Tag="1">
                        <StackPanel>
                            <TextBlock Text="🎞 Gérer Films" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Ajouter, modifier ou supprimer des films" FontSize="10" Foreground="#FF9EA8AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <!-- Gérer Utilisateurs -->
                    <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Tag="2">
                        <StackPanel>
                            <TextBlock Text="👥 Gérer Utilisateurs" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Voir les comptes, suspendre ou modifier les rôles" FontSize="10" Foreground="#FF9EA8AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <!-- Journal Système -->
                    <Button Style="{StaticResource SecondaryButton}" Margin="0,0,0,10" Tag="3">
                        <StackPanel>
                            <TextBlock Text="📋 Journal Système" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Consulter les logs d'activité et événements" FontSize="10" Foreground="#FF9EA8AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>

                    <!-- Exporter Données -->
                    <Button Style="{StaticResource SecondaryButton}" Tag="4">
                        <StackPanel>
                            <TextBlock Text="📤 Exporter Données" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="Télécharger rapports et statistiques (CSV, PDF)" FontSize="10" Foreground="#FF9EA8AF" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Zone principale avec Tabs -->
            <Border Grid.Column="1" Background="#FF252527" Margin="10,20,20,20" CornerRadius="8">
                <TabControl x:Name="AdminTabs"
                            Background="Transparent"
                            BorderThickness="0"
                            Padding="20"
                            Style="{StaticResource {x:Type TabControl}}">

                    <!-- Accueil -->
                    <TabItem Header="Accueil">
                        <StackPanel>
                            <TextBlock Text="Bienvenue, Administrateur 👋" 
                                       Foreground="White" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="Voici les statistiques récentes du système :" 
                                       Foreground="#FF9EA8AF" 
                                       Margin="0,0,0,20"/>

                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Text="📹 Films" Foreground="#FF9EA8AF" FontSize="12"/>
                                        <TextBlock Text="124" Foreground="#FF6CC0FF" FontSize="28" FontWeight="Bold"/>
                                        <TextBlock Text="+12 cette semaine" Foreground="#FF4CAF50" FontSize="10"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Text="👥 Utilisateurs" Foreground="#FF9EA8AF" FontSize="12"/>
                                        <TextBlock Text="57" Foreground="#FF6CC0FF" FontSize="28" FontWeight="Bold"/>
                                        <TextBlock Text="+3 aujourd'hui" Foreground="#FF4CAF50" FontSize="10"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Text="📤 Exports" Foreground="#FF9EA8AF" FontSize="12"/>
                                        <TextBlock Text="3" Foreground="#FF6CC0FF" FontSize="28" FontWeight="Bold"/>
                                        <TextBlock Text="dernier: 07/11" Foreground="#FF9EA8AF" FontSize="10"/>
                                    </StackPanel>
                                </Border>

                                <Border Style="{StaticResource CardBorder}">
                                    <StackPanel>
                                        <TextBlock Text="💰 Revenus" Foreground="#FF9EA8AF" FontSize="12"/>
                                        <TextBlock Text="$2,458" Foreground="#FF4CAF50" FontSize="28" FontWeight="Bold"/>
                                        <TextBlock Text="ce mois" Foreground="#FF9EA8AF" FontSize="10"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </TabItem>

                    <!-- Gérer Films -->
                    <TabItem Header="Gérer Films">
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Gérer les Films 🎞" 
                   FontSize="18" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

                            <!-- Boutons CRUD -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                                <Button Content="Ajouter" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Modifier" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Supprimer" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Voir tous" Style="{StaticResource PrimaryButton}" Width="100"/>
                            </StackPanel>

                            <TextBlock Text="Liste des films ici..." Foreground="#FF9EA8AF"/>
                        </StackPanel>
                    </TabItem>

                    <!-- Gérer Utilisateurs -->
                    <TabItem Header="Gérer Utilisateurs">
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Gestion des utilisateurs 👥" 
                   FontSize="18" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

                            <!-- Boutons CRUD -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                                <Button Content="Ajouter" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Modifier" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Supprimer" Style="{StaticResource PrimaryButton}" Width="100" Margin="0,0,10,0"/>
                                <Button Content="Voir tous" Style="{StaticResource PrimaryButton}" Width="100"/>
                            </StackPanel>

                            <TextBlock Text="Liste des utilisateurs ici..." Foreground="#FF9EA8AF"/>
                        </StackPanel>
                    </TabItem>

                    <!-- Journal Système -->
                    <TabItem Header="Journal Système">
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Journal des activités 📋" 
                   FontSize="18" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

                            <!-- Filtrage / actions -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                                <Button Content="Voir tous" Style="{StaticResource PrimaryButton}" Width="120" Margin="0,0,10,0"/>
                                <Button Content="Filtrer" Style="{StaticResource PrimaryButton}" Width="120" Margin="0,0,10,0"/>
                                <Button Content="Supprimer anciens" Style="{StaticResource PrimaryButton}" Width="150"/>
                            </StackPanel>

                            <TextBlock Text="Liste des logs ici..." Foreground="#FF9EA8AF"/>
                        </StackPanel>
                    </TabItem>

                    <!-- Export -->
                    <TabItem Header="Export">
                        <StackPanel Margin="0,0,0,0">
                            <TextBlock Text="Exporter les données 📤" 
                   FontSize="18" 
                   Foreground="White" 
                   FontWeight="Bold" 
                   Margin="0,0,0,20"/>

                            <!-- Actions Export -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
                                <Button Content="Exporter CSV" Style="{StaticResource PrimaryButton}" Width="120" Margin="0,0,10,0"/>
                                <Button Content="Exporter PDF" Style="{StaticResource PrimaryButton}" Width="120" Margin="0,0,10,0"/>
                                <Button Content="Exporter Excel" Style="{StaticResource PrimaryButton}" Width="120"/>
                            </StackPanel>

                            <TextBlock Text="Sélectionnez un format pour exporter vos données." Foreground="#FF9EA8AF"/>
                        </StackPanel>
                    </TabItem>
                </TabControl>
            </Border>
        </Grid>
        
        <!-- Pied de page -->
        <Border Grid.Row="2" Background="#1A1A1A" BorderThickness="0,1,0,0" BorderBrush="#2A2A2A">
            <TextBlock Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"/>
        </Border>
    </Grid>
</Window>
