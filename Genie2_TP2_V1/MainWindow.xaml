<Window x:Class="Genie2_TP2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Système de visionnement de films en ligne"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <!-- Grille principale -->
    <Grid Margin="20">
        <!-- 3 lignes (haut, contenu, bas) -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- En-tête -->
            <RowDefinition Height="*"/>
            <!-- Contenu principal -->
            <RowDefinition Height="Auto"/>
            <!-- Pied de page -->
        </Grid.RowDefinitions>

        <!-- 3 colonnes (gauche, centre, droite) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <!-- Espace gauche -->
            <ColumnDefinition Width="Auto"/>
            <!-- Contenu centré -->
            <ColumnDefinition Width="*"/>
            <!-- Espace droit -->
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <!-- Boutons à droite -->
                <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,0,20,0">
                    <Button Content="Se connecter"
                    Width="120" Height="35"
                    Background="#333"
                    Foreground="White"
                    BorderBrush="#555"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Margin="0,0,10,0"/>
                    <Button Content="S'inscrire"
                    Width="120" Height="35"
                    Background="#3A3A3A"
                    Foreground="White"
                    BorderBrush="#777"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
                </StackPanel>

                <!-- Titre centré -->
                <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="🎬"
                       FontSize="28"
                       Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                       FontSize="28"
                       Foreground="#F5F5F5"
                       FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENU PRINCIPAL ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="500">

            <TextBlock Text="Bienvenue sur CinéStream"
                       Foreground="White"
                       FontSize="24"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Visionnez vos films préférés en ligne, n’importe où, n’importe quand."
                       Foreground="#CCCCCC"
                       FontSize="14"
                       TextAlignment="Center"
                       TextWrapping="Wrap"
                       Margin="0,0,0,25"/>

            <!-- Zone de recherche -->
            <DockPanel>
                <TextBox Width="400" Height="35"
                         VerticalAlignment="Center"
                         FontSize="14"
                         Padding="10,0"
                         Foreground="White"
                         Background="#2C2C2C"
                         BorderBrush="#555"
                         Text="Rechercher un film..." />
                <Button Content="🔍"
                        Width="50" Height="35"
                        Background="#444"
                        Foreground="White"
                        BorderBrush="#666"
                        FontSize="18"
                        Cursor="Hand"/>
            </DockPanel>
        </StackPanel>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream - Tous droits réservés"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>