<Window x:Class="Genie2_TP2.MemberAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mon compte - CinéStream"
        Height="830" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#121212">

    <Window.Resources>
        <!-- Boutons -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#E50914"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F40612"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#333"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#444"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabItem -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="#AAA"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Background="Transparent" BorderThickness="0,0,0,3" BorderBrush="Transparent" Padding="{TemplateBinding Padding}">
                            <ContentPresenter ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="#E50914"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Carte -->
        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Mot de passe-->
        <Style x:Key="ModernPasswordBox" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Retour"
                            Width="120" Height="35"
                            Background="#333"
                            Foreground="White"
                            BorderBrush="#555"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Barre de recherche -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <TextBox x:Name="SearchBox"
                     Width="400" Height="35"
                     Margin="0,0,10,0"
                     VerticalContentAlignment="Center"
                     Text="Rechercher un film..."
                     Style="{StaticResource ModernTextBox}"/>
            <Button Content="🔍 Rechercher"
                    Width="120" Height="35"
                    Style="{StaticResource SecondaryButton}" Margin="10,0,0,0"/>
        </StackPanel>

        <!-- TabControl -->
        <TabControl Grid.Row="2" Background="Transparent" BorderThickness="0" Margin="30,20,30,20">
            <!-- Solde & Rechargement -->
            <TabItem Header="💳 Solde et Rechargement">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20">
                        <!-- Solde -->
                        <Border Style="{StaticResource CardBorder}">
                            <StackPanel>
                                <TextBlock Text="Solde disponible" Foreground="#AAA"/>
                                <TextBlock Text="25,00 $" FontSize="36" Foreground="#4CAF50" FontWeight="Bold"/>
                            </StackPanel>
                        </Border>

                        <!-- Rechargement -->
                        <Border Style="{StaticResource CardBorder}">
                            <StackPanel>
                                <TextBlock Text="Recharger mon compte" FontSize="18" FontWeight="SemiBold"/>
                                <WrapPanel Margin="0,10">
                                    <Button Content="10 $" Style="{StaticResource SecondaryButton}" Margin="0,0,10,10"/>
                                    <Button Content="25 $" Style="{StaticResource SecondaryButton}" Margin="0,0,10,10"/>
                                    <Button Content="50 $" Style="{StaticResource SecondaryButton}" Margin="0,0,10,10"/>
                                </WrapPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox Style="{StaticResource ModernTextBox}" Width="200" Height="40" Text="0,00"/>
                                    <Button Content="Recharger" Style="{StaticResource PrimaryButton}" Height="40" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Historique -->
            <TabItem Header="📜 Historique">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20">
                        <!-- Exemple de commande -->
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Renouvellement #12345" FontWeight="Bold" FontSize="16"/>
                                <TextBlock Text="Date : 01/11/2025" FontSize="12" Foreground="#AAAAAA"/>
                                <TextBlock Text="Montant : 14,99 $" FontSize="14" Margin="0,5,0,0"/>
                                <TextBlock Text="Statut : Payée" FontSize="14" Margin="0,2,0,0"/>
                                <Button Content="Demander un remboursement" Style="{StaticResource SecondaryButton}" Height="35" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Abonnement -->
            <TabItem Header="⭐ Abonnement">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20,0,0">
                        <!-- Abonnement actuel -->
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Abonnement actuel" FontSize="18" FontWeight="SemiBold" Foreground="White" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="Premium" FontSize="28" FontWeight="Bold" Foreground="#FFD700" Margin="0,0,10,0"/>
                                    <Border Background="#FFD700" CornerRadius="12" Padding="6,2" VerticalAlignment="Center">
                                        <TextBlock Text="ACTIF" Foreground="Black" FontSize="11" FontWeight="Bold"/>
                                    </Border>
                                    <TextBlock Text="Prochain renouvellement : 10/11/2025" FontSize="12" Foreground="#AAAAAA" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Plan Gratuit -->
                        <Border Style="{StaticResource CardBorder}">
                            <StackPanel>
                                <TextBlock Text="Gratuit" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="0,00 $ / mois" FontSize="16" Foreground="#AAAAAA" Margin="0,2,0,10"/>
                                <TextBlock Text="✓ Publicités" Foreground="#AAAAAA"/>
                                <TextBlock Text="✓ Qualité SD" Foreground="#AAAAAA"/>
                                <TextBlock Text="✓ 1 appareil" Foreground="#AAAAAA"/>
                                <Button Content="Retrograder" Style="{StaticResource SecondaryButton}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Plan Standard -->
                        <Border Style="{StaticResource CardBorder}">
                            <StackPanel>
                                <TextBlock Text="Standard" FontSize="20" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="9,99 $ / mois" FontSize="16" Foreground="#AAAAAA" Margin="0,2,0,10"/>
                                <TextBlock Text="✓ Sans publicité" Foreground="White"/>
                                <TextBlock Text="✓ Qualité HD" Foreground="White"/>
                                <TextBlock Text="✓ 2 appareils" Foreground="White"/>
                                <Button Content="Rétrograder" Style="{StaticResource SecondaryButton}" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Plan Premium -->
                        <Border Style="{StaticResource CardBorder}" BorderBrush="#FFD700" BorderThickness="2">
                            <StackPanel>
                                <TextBlock Text="Premium" FontSize="20" FontWeight="Bold" Foreground="#FFD700"/>
                                <TextBlock Text="14,99 $ / mois" FontSize="16" Foreground="#AAAAAA" Margin="0,2,0,10"/>
                                <TextBlock Text="✓ Sans publicité" Foreground="White"/>
                                <TextBlock Text="✓ Qualité 4K + HDR" Foreground="White"/>
                                <TextBlock Text="✓ 4 appareils" Foreground="White"/>
                                <TextBlock Text="✓ Téléchargements illimités" Foreground="White"/>
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button Content="Renouveler maintenant" Style="{StaticResource PrimaryButton}"/>
                                    <Button Content="Résilier" Style="{StaticResource SecondaryButton}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>


            <!-- Profil -->
            <TabItem Header="👤 Mon profil">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="0,20" Orientation="Vertical" >

                        <!-- Informations personnelles -->
                        <Border Style="{StaticResource CardBorder}" Margin="0,0,0,20">
                            <StackPanel>
                                <TextBlock Text="Nom complet" Margin="0,5,0,0"/>
                                <TextBox Style="{StaticResource ModernTextBox}" Text="John Doe"/>

                                <TextBlock Text="Email" Margin="0,10,0,0"/>
                                <TextBox Style="{StaticResource ModernTextBox}" Text="john.doe@example.com"/>
                            </StackPanel>
                        </Border>

                        <!-- Modification mot de passe -->
                        <Border Style="{StaticResource CardBorder}">
                            <StackPanel>
                                <TextBlock Text="Changer le mot de passe" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>

                                <TextBlock Text="Mot de passe actuel" Margin="0,5,0,0"/>
                                <PasswordBox Style="{StaticResource ModernPasswordBox}"/>

                                <TextBlock Text="Nouveau mot de passe" Margin="0,10,0,0"/>
                                <PasswordBox Style="{StaticResource ModernPasswordBox}"/>

                                <TextBlock Text="Confirmer le mot de passe" Margin="0,10,0,0"/>
                                <PasswordBox Style="{StaticResource ModernPasswordBox}"/>

                                <Button Content="Enregistrer les changements" Style="{StaticResource PrimaryButton}" Height="40" Margin="0,15,0,0"/>
                            </StackPanel>
                        </Border>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>

        <!-- Pied de page -->
        <Border Grid.Row="3" Background="#1A1A1A" BorderThickness="0,1,0,0" BorderBrush="#2A2A2A">
            <TextBlock Grid.Row="2"
                   Text="© 2025 CinéStream "
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Grid.Column="1" Height="16" Width="106"/>
        </Border>
    </Grid>
</Window>
