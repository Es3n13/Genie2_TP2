<Window x:Class="Genie2_TP2.Search"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recherche de films"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <!-- Grille principale -->
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Se connecter"
                            Width="120" Height="35"
                            Background="#333"
                            Foreground="White"
                            BorderBrush="#555"
                            FontWeight="SemiBold"
                            Cursor="Hand"
                            Margin="0,0,10,0"/>
                    <Button Content="S'inscrire"
                            Width="120" Height="35"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#777"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENU PRINCIPAL ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Top" HorizontalAlignment="Center" Width="700">

            <TextBlock Text="Résultats de la recherche"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,15"/>

            <!-- Galerie de films -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
                <ItemsControl ItemsSource="{Binding Films}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="220" ItemHeight="300"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#2C2C2C" Margin="10" Padding="10" CornerRadius="5">
                                <StackPanel>
                                    <!-- Image du film -->
                                    <Image Source="{Binding Poster}" Height="150" Stretch="UniformToFill" Margin="0,0,0,10"/>

                                    <!-- Titre et année -->
                                    <TextBlock Text="{Binding Title}" Foreground="White" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                    <TextBlock Text="{Binding Year}" Foreground="#AAAAAA" FontSize="12"/>

                                    <!-- Note en étoiles -->
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                                        <ItemsControl ItemsSource="{Binding Stars}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <StackPanel Orientation="Horizontal"/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <TextBlock Text="★" Foreground="Gold" FontSize="14"/>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <!-- Boutons Description et Visionner -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Button Content="Description" Width="90" Height="25" Margin="0,0,5,0"
                                                Background="#444" Foreground="White" BorderBrush="#666" Cursor="Hand"/>
                                        <Button Content="Visionner" Width="90" Height="25"
                                                Background="#555" Foreground="White" BorderBrush="#777" Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

        </StackPanel>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
