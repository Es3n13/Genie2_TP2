<Window x:Class="Genie2_TP2.FilmDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Détails du film"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Retour"
                            Width="120" Height="35"
                            Background="#333"
                            Foreground="White"
                            BorderBrush="#555"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== CONTENU ===== -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0,20,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Poster du film -->
            <Image Source="images/Inception.jpg"
                   Grid.Column="0"
                   Height="350"
                   Stretch="UniformToFill"
                   Margin="0,0,0,0"
                   VerticalAlignment="Top"/>

            <!-- Détails du film -->
            <StackPanel Grid.Column="2" VerticalAlignment="Top">
                <TextBlock Text="Inception" 
                           Foreground="White" 
                           FontSize="22" 
                           FontWeight="Bold" 
                           Margin="0,0,0,10"/>
                <TextBlock Text="2010" 
                           Foreground="#AAAAAA" 
                           FontSize="14" 
                           Margin="0,0,0,10"/>

                <!-- Note en étoiles -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                    <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                    <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                    <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                    <TextBlock Text="★" Foreground="Gold" FontSize="16"/>
                </StackPanel>

                <!-- Description -->
                <TextBlock Text="Un voleur qui s'introduit dans les rêves des autres pour voler des secrets..."
                           TextWrapping="Wrap"
                           Foreground="#CCCCCC"
                           FontSize="14"
                           Margin="0,0,0,20"/>

                <!-- Bouton Visionner -->
                <Button Content="Visionner le film"
                        Width="150"
                        Height="40"
                        Background="#444"
                        Foreground="White"
                        BorderBrush="#666"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
