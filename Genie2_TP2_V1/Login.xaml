<Window x:Class="Genie2_TP2.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A" Height="60">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="S'inscrire"
                            Width="120" Height="35"
                            Background="#3A3A3A"
                            Foreground="White"
                            BorderBrush="#777"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== FORMULAIRE CONNEXION ===== -->
        <StackPanel Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >
            <TextBlock Text="Connexion"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Email / Nom d'utilisateur -->
            <TextBlock Text="Email ou Nom d'utilisateur" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox Height="35" Margin="0,0,0,10"
                     Padding="10,0"
                     FontSize="14"
                     Foreground="White"
                     Background="#2C2C2C"
                     BorderBrush="#555"/>

            <!-- Mot de passe -->
            <TextBlock Text="Mot de passe" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox Height="35" Margin="0,0,0,20"
                         Padding="10,0"
                         FontSize="14"
                         Foreground="White"
                         Background="#2C2C2C"
                         BorderBrush="#555"/>

            <!-- Bouton connexion -->
            <Button Content="Se connecter"
                    Height="40"
                    Background="#444"
                    Foreground="White"
                    BorderBrush="#666"
                    FontSize="16"
                    FontWeight="SemiBold"
                    Cursor="Hand"/>
        </StackPanel>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2" Grid.ColumnSpan="3"
                   Text="© 2025 CinéStream"
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0,10,0,0"/>
    </Grid>
</Window>
