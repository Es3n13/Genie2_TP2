<Window x:Class="Genie2_TP2.Player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lecteur vidéo"
        Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#1E1E1E">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="Auto" MinWidth="795"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>

        <!-- ===== EN-TÊTE ===== -->
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="#2A2A2A">
            <Grid>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Margin="0,0,20,0">
                    <Button Content="Retour"
                            Width="120" Height="35"
                            Background="#333"
                            Foreground="White"
                            BorderBrush="#555"
                            FontWeight="SemiBold"
                            Cursor="Hand"/>
                </StackPanel>

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <TextBlock Text="🎬"
                               FontSize="28"
                               Margin="0,0,8,0"/>
                    <TextBlock Text="CinéStream"
                               FontSize="28"
                               Foreground="#F5F5F5"
                               FontWeight="Bold"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ===== LECTEUR VIDEO ===== -->
        <Grid Grid.Column="1" Margin="0,37,0,0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- MediaElement pour lire la vidéo -->
            <MediaElement Name="VideoPlayer"
                          Grid.Row="0"
                          LoadedBehavior="Manual"
                          UnloadedBehavior="Stop"
                          Stretch="Uniform"
                          Source="Movies/Inception.mp4"/>

            <!-- Contrôles vidéo -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="▶" Width="50" Height="35" Margin="5,0"
                        Background="#444" Foreground="White" BorderBrush="#666" Cursor="Hand"
                        Click="PlayButton_Click"/>
                <Button Content="⏸" Width="50" Height="35" Margin="5,0"
                        Background="#444" Foreground="White" BorderBrush="#666" Cursor="Hand"
                        Click="PauseButton_Click"/>
                <Button Content="⏹" Width="50" Height="35" Margin="5,0"
                        Background="#444" Foreground="White" BorderBrush="#666" Cursor="Hand"
                        Click="StopButton_Click"/>
                <Slider Name="VolumeSlider" Minimum="0" Maximum="1" Value="0.5" Width="150" Margin="10,0"
                        ValueChanged="VolumeSlider_ValueChanged"/>
                <!-- Bouton pour noter le film -->
                <Button Content="⭐ Noter le film" Width="120" Height="35" Margin="20,0,0,0"
                        Background="#555" Foreground="White" BorderBrush="#777" Cursor="Hand"
                        Click="RateButton_Click"/>
            </StackPanel>
        </Grid>

        <!-- ===== PIED DE PAGE ===== -->
        <TextBlock Grid.Row="2"
                   Text="© 2025 CinéStream "
                   Foreground="#777"
                   FontSize="12"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center" Grid.Column="1" Height="16" Width="106"/>
    </Grid>
</Window>